<script>
  const searchToggle = document.getElementById("searchToggle");
  const mdFilesList = document.getElementById("mdFilesList");

  searchToggle?.addEventListener("click", () => {
    mdFilesList?.classList.toggle("hidden");
  });

  const mdFileButtons = document.querySelectorAll(".md-file-btn");

  mdFileButtons.forEach((button) => {
    button.addEventListener("click", (e) => {
      const target = e.target as HTMLButtonElement;
      if (!target) return;

      const fileName = target.getAttribute("data-file");
      console.log(`Opening file: ${fileName}`);

      mdFileButtons.forEach((btn) =>
        btn.classList.remove("bg-blue-200", "dark:bg-blue-800")
      );
      target.classList.add("bg-blue-200", "dark:bg-blue-800");
    });
  });
</script>
