---
import { DarkModeToggle } from "./ui";
import { PostsView } from "./ui";

const { allPosts } = Astro.props;
---

<nav
  class="w-[30%] h-full p-4 border-r border-gray-200 dark:border-gray-700 text-black dark:text-white"
>
  <!-- Dark Mode Toggle would go here, but we'll handle it in Astro -->
   <DarkModeToggle />
  <div class="mb-6">
    <!-- Search Box -->
    <div class="mb-4">
      <div id="search-container" class="mb-4"></div>
    </div>
  </div>

  <div class="space-y-6">
    <!-- Home Section -->
    <div>
      <a
        href="/"
        class="flex items-center font-bold justify-center py-2 text-3xl hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md transition-colors"
      >
        Home
        </a>
      </div>
      <PostsView allPosts={allPosts} client:load/>
      </div>
  </nav>