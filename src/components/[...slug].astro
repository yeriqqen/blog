---
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await render(post);

// Get related posts (same category or tags)
const allPosts = await getCollection("blog");
const relatedPosts = allPosts.filter((p) => p.id !== post.id).slice(0, 3);
---

<section>
  <article data-pagefind-body class="max-w-4xl mx-auto px-6 py-8">
    <!-- Back Link -->
    <div class="mb-6">
      <a
        href="/blog"
        class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-200 transition-colors"
      >
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path
            fill-rule="evenodd"
            d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L4.414 9H17a1 1 0 110 2H4.414l4.293 4.293a1 1 0 010 1.414z"
            clip-rule="evenodd"></path>
        </svg>
        Back to Blog
      </a>
    </div>

    <!-- Post Header -->
    <header class="mb-8">
      <div
        class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-4"
      >
        <time datetime={post.data.pubDate.toISOString()}>
          {
            post.data.pubDate.toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }
        </time>
        {
          post.data.updatedDate && (
            <>
              <span class="mx-2">â€¢</span>
              <span class="text-xs text-gray-400">
                Updated {post.data.updatedDate.toLocaleDateString()}
              </span>
            </>
          )
        }
      </div>

      <h1
        data-pagefind-meta="title"
        class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4 leading-tight"
      >
        {post.data.title}
      </h1>

      <p
        data-pagefind-meta="description"
        class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed"
      >
        {post.data.description}
      </p>

      <!-- Featured Image -->
      {
        post.data.image && (
          <div class="mt-6">
            <img
              src={post.data.image.url}
              alt={post.data.image.alt}
              class="w-full h-64 md:h-80 object-cover rounded-lg shadow-lg"
            />
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-2 text-center">
              {post.data.image.alt}
            </p>
          </div>
        )
      }
    </header>

    <!-- Table of Contents -->
    {
      headings.length > 0 && (
        <aside class="bg-gray-50 dark:bg-gray-800 rounded-lg p-6 mb-8">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">
            Table of Contents
          </h2>
          <nav>
            <ul class="space-y-2">
              {headings.map((heading) => (
                <li style={`margin-left: ${(heading.depth - 1) * 1}rem`}>
                  <a
                    href={`#${heading.slug}`}
                    class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-200 transition-colors text-sm"
                  >
                    {heading.text}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </aside>
      )
    }

    <!-- Post Content -->
    <div class="prose prose-lg dark:prose-invert max-w-none">
      <Content />
    </div>

    <!-- Post Footer -->
    <footer class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
      <!-- Share Buttons -->
      <div class="flex items-center justify-between mb-8">
        <div>
          <h3
            class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2"
          >
            Share this post
          </h3>
          <div class="flex space-x-4">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.toString())}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-blue-500 hover:text-blue-600 transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                ></path>
              </svg>
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.toString())}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-blue-700 hover:text-blue-800 transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </footer>
  </article>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
